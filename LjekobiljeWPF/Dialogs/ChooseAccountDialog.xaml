<Window x:Class="Ljekobilje.Dialogs.ChooseAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ljekobilje.Dialogs"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundColor}"
        Title="{DynamicResource Choose}" SizeToContent="WidthAndHeight">
    <Grid Margin="5">
        <ComboBox x:Name="AccountsComboBox" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0"/>
        <Label Content="{DynamicResource Choose}" Style="{DynamicResource LabelStyle}" HorizontalAlignment="Center" Margin="0,102,0,0" VerticalAlignment="Top"/>
        <Button Content="{DynamicResource Ok}" HorizontalAlignment="Left" Margin="293,283,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click" IsDefault="True"/>
        <Button Content="{DynamicResource Cancel}" HorizontalAlignment="Left" Margin="377,283,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click_1" IsCancel="True"/>

    </Grid>
</Window>
