<Window x:Class="Ljekobilje.Dialogs.YesNoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ljekobilje.Dialogs"
        mc:Ignorable="d"
        Background="{DynamicResource BackgroundColor}"
        ResizeMode="NoResize"
        Title="{DynamicResource Warning}" SizeToContent="WidthAndHeight">
    <Grid Margin="0,0,5,5">
        <Button Content="{DynamicResource Yes}" HorizontalAlignment="Left" Margin="209,156,0,0" VerticalAlignment="Top" Width="83" Click="Button_Click_1"/>
        <Button Content="{DynamicResource No}" HorizontalAlignment="Left" Margin="308,156,0,0" VerticalAlignment="Top" Width="82" Click="Button_Click"/>
        <TextBlock Foreground="{DynamicResource ForegroundColor}" x:Name="TextBlock" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="141" Width="380"/>
    </Grid>
</Window>
