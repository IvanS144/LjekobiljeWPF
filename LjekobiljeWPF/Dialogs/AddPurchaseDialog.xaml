            <StackPanel>
                <!--<ComboBox ItemsSource="{Binding Plants}" SelectedValuePath="PlantID" SelectedValue="{Binding DataContext.SelectedPlantID, ElementName=This, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
