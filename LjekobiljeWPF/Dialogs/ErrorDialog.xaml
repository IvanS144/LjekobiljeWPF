<Window x:Class="Ljekobilje.Dialogs.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ljekobilje.Dialogs"
        mc:Ignorable="d"
        Background="{DynamicResource BackgroundColor}"
        ResizeMode="NoResize"
        Title="{DynamicResource Error}" SizeToContent="WidthAndHeight">
    <Grid Margin="5,0,5,5">
        <Button Content="{DynamicResource Ok}" HorizontalAlignment="Left" Margin="331,156,0,0" VerticalAlignment="Top" Width="101" Click="Button_Click" IsDefault="True"/>
        <TextBlock Foreground="{DynamicResource ForegroundColor}" x:Name="TextBlock" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="141" Width="440"/>

    </Grid>
</Window>
